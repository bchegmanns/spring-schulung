<?xml version="1.0" encoding="UTF-8"?>

<beans xmlns="http://www.springframework.org/schema/beans"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xmlns:p="http://www.springframework.org/schema/p"
    xsi:schemaLocation="http://www.springframework.org/schema/beans
        http://www.springframework.org/schema/beans/spring-beans.xsd"
        profile="erwachsen">

    <bean id="weiblich" class="de.hegmanns.spring.schulung.demo.configuration.Mensch"
    	p:lieblingsgetraenk="Eierlikoer" p:bezeichnung="Frau"/>
    	
    <bean id="maennlich" class="de.hegmanns.spring.schulung.demo.configuration.Mensch"
    	p:lieblingsgetraenk="Bier" p:bezeichnung="Mann"/>
</beans>